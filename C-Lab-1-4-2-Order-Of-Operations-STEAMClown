#include <iostream>
using namespace std;
#include <iomanip>
#include <string>

float v=2;
float result;

int main(){
// Don't edit this code.  go down to the next block of code
cout << "Results that need to be modified" << endl;
result = v + 1 * 2;
cout << "result: " << result << " expected result : 6" << endl;
result = v + 1 * v + 2 * 2;
cout << "result: " << result << " expected result : 24" << endl;
result = v - 1 * 2 + 2 * 2;
cout << "result: " << result << " expected result : 6" << endl;
result = v + v * v + v * 2;
cout << "result: " << result << " expected result : 32" << endl;
result = (int)v % 2 * v + 2 * 2;
cout << "result: " << result << " expected result : 0" << endl;

// Make your edits here so you can see both the edited and unedited code
cout << "Corrected results" << endl;
result = v + 1 * 2;
cout << "result: " << result << " expected result : 6" << endl;
result = v + 1 * v + 2 * 2;
cout << "result: " << result << " expected result : 24" << endl;
result = v - 1 * 2 + 2 * 2;
cout << "result: " << result << " expected result : 6" << endl;
result = v + v * v + v * 2;
cout << "result: " << result << " expected result : 32" << endl;
result = (int)v % 2 * v + 2 * 2;
cout << "result: " << result << " expected result : 0" << endl;
}

